pipeline {
    // agent with the label 'app_1'
    agent {
        label 'app_1'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Checkout the source code from the Git repository
                    git url: 'http://git.stratos.xfusioncorp.com/sarah/web.git'

                    // Build the Docker image using the Dockerfile in the repository
                    // The tag includes the full registry path
                    def dockerImage = docker.build("stregi01.stratos.xfusioncorp.com:5000/nginx:latest")

                    // Push the image to the private image registry server
                    docker.withRegistry('http://stregi01.stratos.xfusioncorp.com:5000') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
